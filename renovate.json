{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "custom.regex"
  ],
  "labels": [
    "renovate"
  ],
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":noUnscheduledUpdates",
    ":renovatePrefix",
    ":dependencyDashboard"
  ],
  "commitMessagePrefix": "[Renovate] [Bump] ",
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^melos\\.yaml$",
        "^melos.yaml$",
        "melos.yaml"
      ],
      "matchStrings": [
        "^ *(?<depName>[a-zA-Z0-9_]+): *(?<currentValue>.+)$",
        "^\\s*(?<depName>[a-zA-Z0-9_]+):\\s*(?<currentValue>.+)$"
      ],
      "datasourceTemplate": "pub",
      "versioningTemplate": "pub"
    },
    {
      "customType": "regex",
      "fileMatch": [
        ".*y[a]?ml$",
        "^melos\\.yaml$",
        "^melos.yaml$",
        "melos.yaml"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "['\"]?(?<depName>/pipeline-fragments/fragment-version-check)['\"]?\\s*ref:\\s['\"]?(?<currentValue>[\\d-]*)['\"]?",
        "['\"]?(?<depName>pipeline-solutions/gitlab/fragments/fragment-version-check)['\"]?\\s*ref:\\s['\"]?(?<currentValue>[\\d-]*)['\"]?"
      ],
      "depNameTemplate": "pipeline-solutions/gitlab/fragments/fragment-version-check",
      "autoReplaceStringTemplate": "'{{{depName}}}'\n    ref: {{{newValue}}}",
      "datasourceTemplate": "gitlab-tags",
      "versioningTemplate": "gitlab-tags"
    }
  ],
  "includePaths": [
    "melos.yaml",
    "pubspec.yaml",
    "packages/**/pubspec.yaml"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "{{{depName}}} version update"
    }
  ],
  "prHourlyLimit": 1,
  "prConcurrentLimit": 1,
  "automerge": true,
  "automergeType": "pr"
}
