{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "pub",
    "cocoapods",
    "swift",
    "regex"
  ],
  "labels": [
    "renovate"
  ],
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":noUnscheduledUpdates",
    ":renovatePrefix",
    ":dependencyDashboard"
  ],
  "commitMessagePrefix": "[Renovate] [Bump] ",
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^melos\\.yaml$"
      ],
      "matchStrings": [
        "^\\s{6,}(?<depName>[a-zA-Z0-9_]+):\\s+(?<currentValue>.+)$"
      ],
      "datasourceTemplate": "pub",
      "versioningTemplate": "pub"
    }
  ],
  "includePaths": [
    "melos.yaml",
    "pubspec.yaml",
    "packages/**/pubspec.yaml"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pub",
        "regex"
      ],
      "groupName": "{{{depName}}} version update"
    }
  ],
  "prHourlyLimit": 1,
  "prConcurrentLimit": 1,
  "automerge": true,
  "automergeType": "pr"
}
