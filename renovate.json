{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "pub",
    "cocoapods",
    "swift"
  ],
  "labels": [
    "renovate"
  ],
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":noUnscheduledUpdates",
    ":renovatePrefix",
    ":dependencyDashboard"
  ],
  "commitMessagePrefix": "[Renovate] [Bump] ",
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^melos\\.yaml$"
      ],
      "matchStrings": [
        "^[ ]+([a-zA-Z0-9_]+):\\s*\\^?(\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "pub",
      "depNameTemplate": "{{ match1 }}",
      "currentValueTemplate": "{{ match2 }}",
      "versioningTemplate": "semver"
    }
  ],
  "includePaths": [
    "melos.yaml",
    "pubspec.yaml",
    "talabat_app/pubspec.yaml",
    "packages/**/pubspec.yaml",
    "plugins/**/pubspec.yaml",
    "plugins/**/android/build.gradle",
    "packages/**/android/build.gradle",
    "talabat_app/android/app/build.gradle",
    "packages/**/ios/*.podspec",
    "plugins/**/ios/*.podspec",
    "talabat_app/ios/Podfile"
  ],
  "packageRules": [
    {
      "matchManagers": ["pub", "regex"],
      "groupName": "{{{depName}}} version update"
    }
  ],
  "prHourlyLimit": 1,
  "prConcurrentLimit": 1,
  "automerge": true,
  "automergeType": "pr"
}
